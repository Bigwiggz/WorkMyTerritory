@model WorkMyTerritory.ViewModels.ServiceGroupViewModel

<h1>Edit Group</h1>
<div class="row">
    <div class="col-md-12">
        <form method="post">
            <input type="hidden" asp-for="ServiceGroupsId" />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ServiceGroupName"></label>
                <input asp-for="ServiceGroupName" class="form-control" />
                <span asp-validation-for="ServiceGroupName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ServiceGroupNotes"></label>
                <input asp-for="ServiceGroupNotes" class="form-control" rows="3" />
                <span asp-validation-for="ServiceGroupNotes" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Submit Changes</button>
        </form>
    </div>
</div>